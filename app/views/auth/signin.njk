{% extends 'layouts/default.njk' %}

{% block body %}

  <div class="auth-wrapper">
    <form method="post" action="/authenticate" class="form-signin">
      <h1>Login</h1>
      <input name="email" type="email" placeholder="Inform your e-mail">
      <input name="password" type="password" placeholder="Inform your password...">
      <button type="submit">Login</button>
      <a href="/signup">Create account</a>
    </form>
  </div>
  {% endblock %}
