{% extends 'layouts/default.njk' %}

{% block body %}
  <div class="auth-wrapper">
    <form method="post" action="/register" class="form-signin">
      <h1>Create account</h1>
      <input name="name" type="text" required="required" placeholder="Inform your name..">
      <input name="email" type="email" required="required" placeholder="Inform your e-mail...">
      <input name="password" type="password" required="required" placeholder="Inform your password...">
      <button type="submit">Create my account</button>
      <a href="/">I am already registered!</a>
    </form>
  </div>
  {% endblock %}
